{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@root/*": ["*"],
      "@repository/*" : ["repository/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "dist/node_modules"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
